<form action="/items" method="post">
  <div class="form-group">
    <label for="name">Item Name</label>
    <input type="name" class="form-control" id="name" name="name" placeholder="Item name">
  </div>
  <div class="form-group">
    <label for="url">URL</label>
    <input type="url" class="form-control" id="url" name="url" placeholder="http://">
  </div>
  <div class="form-group">
    <label for="quantity">Quantity</label>
    <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1">
  </div>
  <button type="submit" id="submit" class="btn btn-primary">Add item</button>
</form>